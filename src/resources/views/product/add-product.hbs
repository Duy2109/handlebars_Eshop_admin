<h2>Add Products</h2>
<a href="/product" class="btn btn-primary">back to all Product</a>
<br><br>
<form method="POST" action="/product/add-product-store" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">title</label>
        <input type="text" class="form-control" name="title" id="title" placeholder="Title" required>
    </div>
    <div class="form-group">
        <label for="">description</label>
        <textarea name="desc" id="content" cols="30" rows="10" placeholder="description" class="form-control"
            required></textarea>
    </div>
    <div class="form-group">
        <label for="">category</label>
        <input type="text" class="form-control" name="category" id="category" placeholder="category" required>
    </div>
    <div class="form-group">
        <label for="">price</label>
        <input type="text" class="form-control" name="price" id="price" placeholder="price" required>
    </div>
    <div class="form-group">
        <label for="">image</label>
        <input type="file" class="form-control" name="image" id="image" placeholder="sorting" >
        <img src="#"  id="imgPreview" alt="" style="margin: 20px;">
    </div>

    <button type="submit" class="btn btn-primary mt-4">Add Product</button>

</form>

<script>
    function readULR(input) {
        if(input.files && input.files[0]){
            var reader = new FileReader();
            reader.onload=function(e) {
                $('#imgPreview').attr('src',e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $('#image').change(function(){
        readULR(this);
    })
    
</script>